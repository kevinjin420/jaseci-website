---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const authors = await getCollection("authors");
---

<BaseLayout title="Authors">
  <div class="pt-32 pb-16">
    <div class="container max-w-4xl mx-auto px-4">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-12">Authors</h1>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {authors.map((author) => (
          <a
            href={`/authors/${author.slug}`}
            class="group p-6 rounded-2xl bg-medium-bg/50 border border-light-bg/30 hover:border-primary-orange/40 transition-all text-center"
          >
            {author.data.image && (
              <img
                src={author.data.image}
                alt={author.data.title}
                class="w-20 h-20 rounded-full mx-auto mb-4 object-cover border-2 border-light-bg/30 group-hover:border-primary-orange/50 transition-colors"
              />
            )}
            <h3 class="text-white font-semibold group-hover:text-primary-orange transition-colors">
              {author.data.title}
            </h3>
            {author.data.description && (
              <p class="text-xs text-dark-text mt-2 line-clamp-2">{author.data.description}</p>
            )}
          </a>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
