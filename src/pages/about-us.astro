---
import BaseLayout from "@layouts/BaseLayout.astro";
import Journey from "@components/landing/Journey.astro";
import { teamMembers, testimonials } from "@data/team";
---

<BaseLayout title="About Us" description="Meet the team behind Jac and Jaseci">
  <div class="pt-32 pb-16">
    <section class="container max-w-7xl mx-auto px-4 mb-24">
      <div class="text-center mb-16">
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-4">
          Building the Future of <span class="text-primary-orange">AI-First Programming</span>
        </h1>
        <p class="text-dark-text max-w-2xl mx-auto">
          We are researchers, engineers, and entrepreneurs united by the vision of making AI accessible through better programming abstractions.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {teamMembers.map((member) => (
          <div class="group p-6 rounded-2xl bg-medium-bg/50 border border-light-bg/30 hover:border-primary-orange/40 transition-all duration-300">
            <img
              src={member.image}
              alt={member.name}
              class="w-20 h-20 rounded-full mx-auto mb-4 object-cover border-2 border-light-bg/30 group-hover:border-primary-orange/50 transition-colors"
            />
            <h3 class="text-white font-semibold text-center">{member.name}</h3>
            <p class="text-xs text-primary-orange text-center mt-1">{member.title}</p>
            <p class="text-xs text-dark-text text-center mt-3 line-clamp-4">{member.description}</p>
            <div class="flex justify-center gap-3 mt-4">
              {member.social.linkedin && (
                <a href={member.social.linkedin} target="_blank" rel="noopener noreferrer" class="text-dark-text hover:text-primary-orange transition-colors" aria-label={`${member.name} LinkedIn`}>
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                </a>
              )}
              {member.social.twitter && (
                <a href={member.social.twitter} target="_blank" rel="noopener noreferrer" class="text-dark-text hover:text-primary-orange transition-colors" aria-label={`${member.name} Twitter`}>
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="container max-w-7xl mx-auto px-4 mb-24">
      <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-12">
        What People Are <span class="text-primary-orange">Saying</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {testimonials.map((testimonial) => (
          <div class="p-6 rounded-2xl bg-medium-bg/50 border border-light-bg/30">
            <div class="flex items-center gap-3 mb-4">
              <img src={testimonial.logo} alt={testimonial.company} class="h-8 w-auto opacity-70" />
            </div>
            <blockquote class="text-dark-text text-sm leading-relaxed mb-4 italic">
              "{testimonial.quote}"
            </blockquote>
            <div>
              <p class="text-white font-semibold text-sm">{testimonial.author}</p>
              <p class="text-xs text-dark-text">{testimonial.title}, {testimonial.company}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <Journey />
  </div>
</BaseLayout>
