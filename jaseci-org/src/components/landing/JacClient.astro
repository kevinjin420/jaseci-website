---
import { highlightJac } from "@lib/highlight";

const todoAppCode = `import:js from react { useState }

node Todo {
    has title: str;
    has done: bool = False;
}

walker add_todo {
    has title: str;
    can create with \`root entry {
        new_todo = here ++> Todo(title=self.title);
        report new_todo;
    }
}

obj TodoApp :react.Component: {
    can render {
        todos, setTodos = useState([]);
        input, setInput = useState("");

        return <div class="app">
            <h1>Todo App</h1>
            <input value={input}
                   onChange={|e| setInput(e.target.value)} />
            <button onClick={|| {
                add_todo(title=input) spawn root;
                setInput("");
            }}>Add</button>
            {todos.map(|t| <div>{t.title}</div>)}
        </div>;
    }
}`;

const deploySteps = [
  { step: "1", label: "Write", command: "vim app.jac", description: "Full-stack app in one file" },
  { step: "2", label: "Run", command: "jac start app.jac", description: "Local development server" },
  { step: "3", label: "Deploy", command: "jac start app.jac --scale", description: "Production with auto-infra" },
];
---

<section class="section relative">
  <div class="container max-w-7xl mx-auto px-4">
    <div class="text-center mb-16 reveal-on-scroll">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Full-Stack with <span class="text-primary-orange">jac-client</span>
      </h2>
      <p class="text-dark-text max-w-2xl mx-auto">
        Build complete web applications in a single .jac file. React components, backend logic, and AI integrations unified.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 items-start">
      <div class="lg:col-span-3 reveal-on-scroll">
        <div class="rounded-2xl bg-medium-bg/60 border border-light-bg/30 overflow-hidden">
          <div class="flex items-center gap-2 px-4 py-3 bg-medium-bg border-b border-light-bg/30">
            <div class="flex gap-1.5">
              <span class="w-3 h-3 rounded-full bg-red-500/60"></span>
              <span class="w-3 h-3 rounded-full bg-yellow-500/60"></span>
              <span class="w-3 h-3 rounded-full bg-green-500/60"></span>
            </div>
            <span class="text-xs text-dark-text ml-2">app.jac</span>
          </div>
          <pre class="p-4 text-sm leading-relaxed overflow-x-auto max-h-[500px]"><code set:html={highlightJac(todoAppCode)} /></pre>
        </div>
      </div>

      <div class="lg:col-span-2 space-y-4 reveal-on-scroll" style="transition-delay: 150ms">
        {deploySteps.map((item) => (
          <div class="p-4 rounded-xl bg-medium-bg/50 border border-light-bg/30">
            <div class="flex items-center gap-3 mb-2">
              <span class="w-8 h-8 rounded-lg bg-primary-orange/20 text-primary-orange flex items-center justify-center text-sm font-bold">
                {item.step}
              </span>
              <span class="text-white font-semibold">{item.label}</span>
            </div>
            <code class="text-xs text-primary-orange bg-dark-bg px-3 py-1.5 rounded-lg block mb-2">{item.command}</code>
            <p class="text-xs text-dark-text">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
