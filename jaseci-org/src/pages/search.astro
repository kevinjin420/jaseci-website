---
import BaseLayout from "@layouts/BaseLayout.astro";
import SearchResults from "@components/react/SearchResults";

const query = Astro.url.searchParams.get("key") || "";
---

<BaseLayout title={query ? `Search: ${query}` : "Search"} noindex>
  <div class="pt-32 pb-16">
    <div class="container max-w-4xl mx-auto px-4">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-8">Search</h1>
      <SearchResults client:load query={query} />
    </div>
  </div>
</BaseLayout>
